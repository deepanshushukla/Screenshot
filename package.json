{
  "name": "Screenshot",
  "version": "1.0.0",
  "description": "This is description",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "ELECTRON_ENV=development electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder -mw",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.deep.screenshot",
    "asar": false,
    "mac": {
      "hardenedRuntime": false,
      "extendInfo": {
        "NSCameraUsageDescription": "Allow Access to camera"
      },
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "requestedExecutionLevel": "requireAdministrator",
      "icon": "build/icon.ico"
    },
    "dmg": {
      "background": "build/appdmg.png",
      "icon": "build/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ]
    },
    "nsis": {
      "uninstallDisplayName": "ScreenShot App",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.847.0",
    "body-parser": "^1.19.0",
    "electron-oauth2": "^3.0.0",
    "electron-packager": "^15.1.0",
    "electron-reload": "^1.5.0",
    "express": "^4.17.1",
    "jquery": "^3.5.1",
    "mime": "^2.5.2",
    "request": "^2.88.2",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "electron": "^10.1.2",
    "electron-builder": "^22.10.5",
    "electron-is-dev": "^2.0.0"
  }
}
